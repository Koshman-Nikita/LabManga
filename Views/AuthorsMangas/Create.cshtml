@model LabManga.AuthorsManga

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить мангу</h1>

<h4>AuthorsManga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.AuthorId" name="AuthorId" />
            <div class="form-group">
                <label asp-for="MangaId" class="control-label"></label>
                <select asp-for="MangaId" class="form-control" asp-items="ViewBag.MangaId"></select>
            </div>




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index", new { id = @ViewBag.AuthorId, name = @ViewBag.AuthorName })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
