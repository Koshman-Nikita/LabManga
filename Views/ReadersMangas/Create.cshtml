@model LabManga.ReadersManga

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление манги читателю @ViewBag.ReaderName</h1>

<h4>ReadersManga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.ReaderId" name="ReaderId" />
            <div class="form-group">
                <label asp-for="MangaId" class="control-label"></label>
                <select asp-for="MangaId" class="form-control" asp-items="ViewBag.MangaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlanReturn" class="control-label"></label>
                <input asp-for="PlanReturn" class="form-control" />
                <span asp-validation-for="PlanReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FactReturn" class="control-label"></label>
                <input asp-for="FactReturn" class="form-control" />
                <span asp-validation-for="FactReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index", new { id = @ViewBag.ReaderId, name = @ViewBag.ReaderName })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
